<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Praktikum.Main.AdminMainController">
    <children>
        <Label text="=== Halaman Utama Mahasiswa ===" layoutX="100" layoutY="20"/>

        <Button text="Laporkan Barang" layoutX="100" layoutY="60" onAction="#handleReportItem"/>
        <Button text="Lihat Barang yang Dilaporkan" layoutX="100" layoutY="100" onAction="#handleViewReportedItems"/>

        <TableView fx:id="itemsTable" layoutX="50" layoutY="140" prefWidth="400" prefHeight="200" visible="false">
            <columns>
                <TableColumn fx:id="nameColumn" text="Nama Barang" />
                <TableColumn fx:id="descriptionColumn" text="Deskripsi" />
                <TableColumn fx:id="dateColumn" text="Waktu dan Tanggal" />
                <TableColumn fx:id="locationColumn" text="Lokasi" />
            </columns>
        </TableView>

        <Button text="Logout" layoutX="100" layoutY="360" onAction="#handleLogout"/>
    </children>
</AnchorPane>
